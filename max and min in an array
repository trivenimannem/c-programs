#include <stdio.h>

int main() {
    int arr[100], n, i;
    int max, min;

  
    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    max = min = arr[0];

    // Find max and min
    for(i = 1; i < n; i++) {
        if(arr[i] > max)
            max = arr[i];
        if(arr[i] < min)
            min = arr[i];
    }
    printf("\nMaximum number = %d\n", max);
    printf("Minimum number = %d\n", min);

    return 0;
}
