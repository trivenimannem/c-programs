#include <stdio.h>
int main() {
    char str[100], rev[100];
    int i, len = 0, j;
    printf("Enter string");
    gets(str);
    for(i = 0; str[i] != '\0'; i++)
        len++;
    j = 0;
    for(i = len - 1; i >= 0; i--)
        rev[j++] = str[i];
    rev[j] = '\0';
    printf("Size = %d\n", len);
    printf("Reverse = %s", rev);
    return 0;
}
